<li>
  <div class="d-flex align-items-center gap-2 mb-3">
    <%= image_tag attendee.decorate.avatar, class: 'rounded-circle avatar-md' %>
    <%= link_to "#{attendee.name}", others_profile_path(attendee.id) %>
    <% if logged_in? && current_user != attendee %>
      <% if current_user != @user %>
        <% if current_user.following?(attendee) %>
         <%= link_to 'フォローを外す', user_relationships_path(attendee.id), method: :delete, class: "btn-sm btn-danger" %>
        <% else %>
         <%= link_to 'フォローする', user_relationships_path(attendee.id), method: :POST, class:"btn-sm btn-success" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</li>
